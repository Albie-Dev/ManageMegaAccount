@if (UserInfo != null)
{
    <div class="d-inline-flex align-items-center" @onclick="NavigateToUserDetail" style="cursor: pointer;">
        <div class="position-relative" @onmouseover="ShowTooltip" @onmouseout="HideTooltip">
            @if (string.IsNullOrEmpty(UserInfo.Avatar))
            {
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                    style="width: @(Size)px; height: @(Size)px; font-size: @(((1.25/50)*Size).ToString().Replace(',', '.'))rem; font-weight: bold;">
                    @GetInitial(UserInfo.FullName)
                </div>
            }
            else
            {
                <img src="@UserInfo.Avatar" alt="Avatar" class="rounded-circle" style="width: @(Size)px; height: @(Size)px;" />
            }

            <div class="position-absolute bg-dark text-white p-2 rounded"
                style="top: 100%; left: 50%; transform: translateX(-50%); display: @_tooltipDisplay;">
                <div>@UserInfo.FullName</div>
                <div>@UserInfo.Email</div>
            </div>
        </div>

        @if (ShowFullName)
        {
            <span class="ms-2">@UserInfo.FullName</span>
        }
    </div>
}
else
{
    <span></span>
}
