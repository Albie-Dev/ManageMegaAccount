
<div class="d-flex gap-1 align-items-center" style="font-size: @StarSize;">
    @for (int i = 1; i <= 5; i++)
    {
        var starValue = i;
        var starClass = GetStarClass(starValue);
        <i class="@starClass star"
           @onclick="() => UpdateRating(starValue)"
           @onmouseover="() => HighlightStars(starValue)"
           @onmouseout="() => HighlightStars(RateStar)"></i>
    }
</div>
<p class="mt-2" style="font-size: @FontSize;">Rating: <span>@RateStar.ToString("F2")</span> / 5</p>